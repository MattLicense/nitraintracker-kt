<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorAccent">

    <TextView
            android:id="@+id/calling_point"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="Calling Point"
            android:gravity="center"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:id="@+id/scheduled_time"
            android:layout_toRightOf="@id/calling_point"
            android:layout_alignRight="@id/calling_point"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="scheduled"
            android:textSize="11dp"
            android:gravity="right"
            android:textAlignment="gravity"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:id="@+id/estimated_time"
            android:layout_below="@id/scheduled_time"
            android:layout_toRightOf="@id/calling_point"
            android:layout_alignRight="@id/calling_point"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="estimated"
            android:textSize="11dp"
            android:gravity="right"
            android:textAlignment="gravity"/>

</RelativeLayout>